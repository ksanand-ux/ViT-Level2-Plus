version: '3.8'

services:
  vit-yolo-api:
    container_name: vit-yolo-api-container
    build: .
    ports:
      - "8000:8000"
    volumes:
      - ./outputs:/app/outputs
      - ~/.aws:/root/.aws:ro         # ðŸ‘ˆ MOUNT YOUR AWS CREDENTIAL
    env_file:
      - .env
 depends_on:
      - prometheus

  prometheus:
    image: prom/prometheus
    container_name: prometheus
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml
    ports:
      - "9090:9090"

  grafana:
    image: grafana/grafana
    container_name: grafana
    ports:
      - "3000:3000"
    depends_on:
      - prometheus
